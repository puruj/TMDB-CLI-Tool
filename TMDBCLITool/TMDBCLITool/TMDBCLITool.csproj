<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net8.0</TargetFramework>

    <!-- Make this a dotnet tool -->
    <PackAsTool>true</PackAsTool>

    <!-- Command name users will type in terminal -->
    <ToolCommandName>tmdb-movies</ToolCommandName>

    <!-- Package metadata -->
    <PackageId>Puru.TmdbMovies.Cli</PackageId>
    <Version>1.0.0</Version>
    <Authors>Puru Jetly</Authors>
    <Description>CLI tool to list TMDB now playing / popular / top / upcoming movies.</Description>
    <PackageOutputPath>./nupkg</PackageOutputPath>
  </PropertyGroup>

</Project>
